

<script
  src="{{ 'blog-posts-list.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

<blog-posts-list section-id="{{ section.id }}">
  <div class="section-background color-{{ section.settings.color_scheme }}"></div>
  <div
    class="
      section
      color-{{ section.settings.color_scheme }}
      blog-posts
      spacing-style
      size-style
    "
    data-testid="blog-posts"
    style="{% render 'spacing-style', settings: section.settings %}"
  >
    {% content_for 'blocks' %}

    {% liquid
      assign posts_per_page = section.settings.posts_per_page
      assign show_hero = section.settings.show_hero_post
      assign columns = section.settings.columns | plus: 0
      assign col_span = 6 | divided_by: columns
    %}

    {% paginate blog.articles by posts_per_page %}
      <div
        ref="grid"
        class="blog-posts-container"
        data-last-page="{{ paginate.pages }}"
        style="--columns-gap: {{ section.settings.columns_gap }}px; --rows-gap: {{ section.settings.rows_gap }}px;"
      >
        {% for article in blog.articles %}
          {% liquid
            assign is_hero = false
            assign item_col_span = col_span
            assign item_scale = 0.6

            if show_hero and forloop.first
              assign is_hero = true
              assign item_col_span = 6
              assign item_scale = 1
            endif
          %}
          {% style %}
            [data-blog-index="{{ section.id }}-{{ forloop.index }}"] {
              --col-span: {{ item_col_span }};
              --blog-post-card-scale: {{ item_scale }};
            }

            @media screen and (max-width: 749px) {
              [data-blog-index="{{ section.id }}-{{ forloop.index }}"] {
                --col-span: 6;
                --blog-post-card-scale: 0.5;
              }
            }
          {% endstyle %}
          <div
            ref="cards[]"
            class="blog-post-item{% if is_hero %} blog-post-item--horizontal{% endif %}"
            data-testid="blog-post-item"
            data-blog-index="{{ section.id }}-{{ forloop.index }}"
            data-page="{{ paginate.current_page }}"
          >
            {% content_for 'block', id: 'static-blog-post-card', type: '_blog-post-card', article: article %}
          </div>
        {% endfor %}
      </div>

      {% if paginate.next and section.settings.view_more_text != blank %}
        <div class="blog-posts-view-more">
          <a ref="viewMoreNext" href="{{ paginate.next.url }}" class="blog-posts-view-more__link">
            {{ section.settings.view_more_text }}
          </a>
        </div>
      {% endif %}
    {% endpaginate %}
  </div>
</blog-posts-list>

{% stylesheet %}
  /**
   * Blog posts page layout
   */
  .blog-posts {
    --page-content-width: var(--narrow-page-width);
    --page-width: calc(var(--page-content-width) + (var(--page-margin) * 2));
  }

  .blog-posts-container {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1rem;
    width: 100%;
    column-gap: var(--columns-gap);
    row-gap: var(--rows-gap);
  }

  /**
   * Blog post item grid positioning and scaling.
   * Layout is calculated in Liquid based on total article count.
   * Mobile overrides are applied per-item in inline styles for proper specificity.
   */
  .blog-post-item {
    grid-column: span var(--col-span);
  }

  /**
   * When there's no image, the blog post item has a border.
   */
  .blog-post-item {
    border: 1px solid rgb(var(--color-foreground-rgb) / var(--opacity-20));
    padding: 0 1rem 1rem;
  }

  .blog-post-item:has(.blog-post-card__image-container) {
    border: none;
    padding: 0;
  }

  .blog-posts-view-more {
    display: flex;
    justify-content: center;
    margin-top: var(--rows-gap);
  }

  .blog-posts-view-more__link {
    display: inline-block;
    text-decoration: none;
    font-size: var(--font-size-static-small);
    letter-spacing: 0.04em;
    border-bottom: 1px solid currentColor;
    padding-bottom: 0.15em;
    transition: opacity 0.2s;
  }

  .blog-posts-view-more__link:hover {
    opacity: 0.7;
  }
{% endstylesheet %}

